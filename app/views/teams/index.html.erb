<p id="notice"><%= notice %></p>

<ul class="list-group">
  <h3><li class="list-group-item active" aria-current="true"><strong>Teams</strong></li></h3>
</ul>

<ol>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= link_to 'Show', team %></td>
        <% if current_user.role_id == 1 %>
          <td><%= link_to 'Edit', edit_team_path(team) %></td>
          <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <%= link_to '' %>
        <% end %>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

</ol>

<hr>

<% if current_user.role_id == 1 %>
  <%= link_to 'New Team', new_team_path, class:"btn btn-primary d-inline" %>
<% else %>
  <%= link_to '' %>
<% end %>
