<p id="notice"><%= notice %></p>

<ul class="list-group">
  <h3><li class="list-group-item active" aria-current="true"><strong>Team: <%= @team.name %></strong></li></h3>
</ul>

<ol>

<% if @team.bussinesses.any? %>
  <p>
    <strong>Businesses Asigned:</strong>
    <p>
      <ul>
        <% @team.bussinesses.each do |bussiness| %>
          <li>
            <%= bussiness.name %>
          </li>
        <% end %>
      </ul>
    </p>
  </p>
<% end %>

<% if @team.users.any? %>
  <p>
    <strong>Team Members:</strong>
    <p>
      <ul>
        <% @team.users.each do |user| %>
          <li>
            <%= user.full_name %>
          </li>
        <% end %>
      </ul>
    </p>
  </p>
<% end %>

</ol>

<hr>

<%= link_to 'Edit', edit_team_path(@team), class:"btn btn-primary" %> |
<%= link_to 'Back', teams_path, class:"btn btn-primary" %>

